@model WorkoutManagementViewModel
@{
    ViewData["Title"] = "Workout-Verwaltung";
    var intensities = new[] { "Niedrig", "Mittel", "Hoch" };
}

<div class="container py-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <div>
            <h1 class="display-6">Workouts verwalten</h1>
            <p class="text-muted mb-0">CRUD über WorkoutService mit Validierung & Kalorienberechnung.</p>
        </div>
        @*<form class="d-flex align-items-center gap-2" asp-action="Index" method="get">
            <label class="text-muted mb-0" for="participantIdFilter">Teilnehmer</label>
            <input type="number" min="1" name="participantId" id="participantIdFilter" class="form-control form-control-sm" value="@Model.ParticipantId"/>
            <button class="btn btn-outline-secondary btn-sm" type="submit">Laden</button>
        </form>*@
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.Message))
    {
        <div class="alert alert-success">@Model.Message</div>
    }
    @if (!string.IsNullOrWhiteSpace(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
    }

    <div class="card mb-4">
        <div class="card-header bg-transparent">
            <h2 class="h5 mb-0">Workout erfassen</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" class="row g-3">
                @Html.AntiForgeryToken()
                <div class="col-md-2">
                    <label class="form-label" asp-for="CreateForm.ParticipantId">Teilnehmer</label>
                    <input class="form-control" asp-for="CreateForm.ParticipantId"/>
                    <span asp-validation-for="CreateForm.ParticipantId" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label class="form-label" asp-for="CreateForm.ExerciseType">Übungsart</label>
                    <input class="form-control" asp-for="CreateForm.ExerciseType" placeholder="z.B. HIIT"/>
                    <span asp-validation-for="CreateForm.ExerciseType" class="text-danger small"></span>
                </div>
                <div class="col-md-2">
                    <label class="form-label" asp-for="CreateForm.Duration">Dauer (min)</label>
                    <input class="form-control" asp-for="CreateForm.Duration"/>
                    <span asp-validation-for="CreateForm.Duration" class="text-danger small"></span>
                </div>
                <div class="col-md-2">
                    <label class="form-label" asp-for="CreateForm.Repetitions">Wdh.</label>
                    <input class="form-control" asp-for="CreateForm.Repetitions"/>
                    <span asp-validation-for="CreateForm.Repetitions" class="text-danger small"></span>
                </div>
                <div class="col-md-2">
                    <label class="form-label" asp-for="CreateForm.Intensity">Intensität</label>
                    <select class="form-select" asp-for="CreateForm.Intensity">
                        @foreach (var intensity in intensities)
                        {
                            <option value="@intensity">@intensity</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label" asp-for="CreateForm.Date">Datum</label>
                    <input class="form-control" asp-for="CreateForm.Date" type="date"/>
                    <span asp-validation-for="CreateForm.Date" class="text-danger small"></span>
                </div>
                <div class="col-12">
                    <button class="btn btn-primary" type="submit">Workout speichern</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
            <h2 class="h5 mb-0">Aktuelle Workouts</h2>
            <span class="text-muted small">Quelle: WorkoutDB.Workouts</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table mb-0 align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Datum</th>
                        <th>Übungsart</th>
                        <th>Intensität</th>
                        <th>Dauer</th>
                        <th>Kalorien</th>
                        <th>Aktualisieren</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model.Workouts.Any())
                    {
                        foreach (var workout in Model.Workouts)
                        {
                            <tr>
                                <td>@workout.WorkoutId</td>
                                <td>@workout.Date.ToShortDateString()</td>
                                <td>@workout.ExerciseType</td>
                                <td>@workout.Intensity</td>
                                <td>@workout.Duration min</td>
                                <td>@workout.Calories kcal</td>
                                <td>
                                    <form class="row gy-2 gx-1 align-items-center" asp-action="Update" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="WorkoutId" value="@workout.WorkoutId"/>
                                        <input type="hidden" name="ParticipantId" value="@Model.ParticipantId"/>
                                        <div class="col-md-5">
                                            <input type="number" min="1" max="300" name="Duration" class="form-control form-control-sm" value="@workout.Duration"/>
                                        </div>
                                        <div class="col-md-4">
                                            <select name="Intensity" class="form-select form-select-sm">
                                                @foreach (var intensity in intensities)
                                                {
                                                    <option value="@intensity" selected="@(intensity == workout.Intensity ? "selected" : null)">@intensity</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <button class="btn btn-outline-primary btn-sm w-100" type="submit">Speichern</button>
                                        </div>
                                    </form>
                                </td>
                                <td>
                                    <form asp-action="Delete" method="post" onsubmit="return confirm('Workout löschen?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@workout.WorkoutId"/>
                                        <input type="hidden" name="participantId" value="@Model.ParticipantId"/>
                                        <button class="btn btn-link text-danger p-0">Löschen</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-muted text-center py-4">
                                Keine Workouts für Teilnehmer #@Model.ParticipantId gefunden.
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}

